<!-- Views/Admin/EditFood.cshtml -->
@model Duanmau.Web.API.Models.Food

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Cập nhật Thức ăn</title>
    <!-- Add Bootstrap CSS link here -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css">
    <!-- Add your custom styles here -->
</head>
<body>
    <style>
        form {
            max-width: 600px;
            margin: 0 auto;
            padding: 20px;
            background-color: #f5f5f5;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        /* Style cho các label */
        label {
            display: block;
            margin-bottom: 5px;
            font-weight: bold;
        }

        /* Style cho input và select */
        input[type="text"],
        textarea,
        select {
            width: 100%;
            padding: 8px;
            margin-bottom: 10px;
            border-radius: 5px;
            border: 1px solid #ccc;
        }

        h2 {
            text-align: center; /* Căn giữa nội dung */
            margin-top: 20px; /* Khoảng cách từ phía trên */
        }

        /* Style cho các nút */
        button[type="submit"] {
            padding: 10px 20px;
            background-color: #4caf50;
            color: #fff;
            border: none;
            border-radius: 5px;
            cursor: pointer;
        }

            button[type="submit"]:hover {
                background-color: #45a049;
            }
    </style>

    <h2>Cập nhật Thức ăn</h2>
    <form asp-controller="Admin_food" asp-action="FoodSaveEdited" method="post" enctype="multipart/form-data">
        <div class="form-group">
            <label for="FoodName">Tên Thức ăn:</label>
            <input type="text" class="form-control" id="FoodName" name="FoodName" value="@Model.FoodName" required>
        </div>

        <div class="form-group">
            <label for="Price">Giá:</label>
            <input type="text" class="form-control" id="Price" name="Price" value="@Model.Price" required>
        </div>

        <div class="form-group">
            <label for="Status">Trạng thái:</label>
            <input type="text" class="form-control" id="Status" name="Status" value="@Model.Status" required>
        </div>

        <div class="form-group">
            <label for="Mota">Mô tả:</label>
            <textarea class="form-control" id="Mota" name="Mota" rows="3">@Model.Mota</textarea>
        </div>

        <div class="form-group">
            <label for="RemainingQuantity">Số lượng tồn kho:</label>
            <input type="text" class="form-control" id="RemainingQuantity" name="RemainingQuantity" value="@Model.RemainingQuantity" required>
        </div>
        <div class="form-group">
            <label for="file">Hình ảnh:</label>
            <input type="file" class="form-control" id="file" value="@Model.File" name="file">
        </div>
        <td>
            @if (!string.IsNullOrEmpty(Model.File))
            {
                <img src="@Model.File" alt="Food Image" style="max-width: 100px; max-height: 100px;" />
            }
            else
            {
                <span>No image</span>
            }
        </td>

        <div class="form-group">
            <label for="DanhMucFoodId">Danh mục thức ăn:</label>
            <select class="form-control" id="DanhMucFoodId" name="DanhMucFoodId">
                @foreach (var danhMuc in ViewBag.DanhMucFoodsList)
                {
                if (danhMuc.DanhMucFoodId == ViewBag.CurrentDanhMucFoodId)
                {
                <option value="@danhMuc.DanhMucFoodId" selected>@danhMuc.DanhMucFoodName</option>
                }
                else
                {
                <option value="@danhMuc.DanhMucFoodId">@danhMuc.DanhMucFoodName</option>
                }
                }

            </select>


        </div>
        <input type="hidden" asp-for="FoodId" />

        <button type="submit" class="btn btn-primary">Lưu</button>
        <a asp-controller="Admin_food" asp-action="FoodAll" class="btn btn-secondary">Quay Lại</a>
    </form>
</body>
</html>



