<!-- Views/Admin/EditFood.cshtml -->
@model Duanmau.Web.API.Models.DanhMucFood

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Cập nhật Danh mục</title>
    <!-- Add Bootstrap CSS link here -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css">
    <!-- Add your custom styles here -->
</head>
<body>
    <style>
        form {
            max-width: 600px;
            margin: 0 auto;
            padding: 20px;
            background-color: #f5f5f5;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        /* Style cho các label */
        label {
            display: block;
            margin-bottom: 5px;
            font-weight: bold;
        }

        /* Style cho input và select */
        input[type="text"],
        textarea,
        select {
            width: 100%;
            padding: 8px;
            margin-bottom: 10px;
            border-radius: 5px;
            border: 1px solid #ccc;
        }

        h2 {
            text-align: center; /* Căn giữa nội dung */
            margin-top: 20px; /* Khoảng cách từ phía trên */
        }

        /* Style cho các nút */
        button[type="submit"] {
            padding: 10px 20px;
            background-color: #4caf50;
            color: #fff;
            border: none;
            border-radius: 5px;
            cursor: pointer;
        }

            button[type="submit"]:hover {
                background-color: #45a049;
            }
    </style>

    <h2>Cập nhật Danh mục</h2>
    <form asp-controller="Admin_DanhMucFood" asp-action="DanhMucFoodSaveEdited" method="post">
        <div class="form-group">
            <label for="DanhMucFoodName">Tên danh mục:</label>
            <input type="text" class="form-control" id="DanhMucFoodName" name="DanhMucFoodName" value="@Model.DanhMucFoodName" required>
        </div>


        <div class="form-group">
            <label for="Mota">Mô tả:</label>
            <textarea class="form-control" id="Mota" name="Mota" rows="3">@Model.Mota</textarea>
        </div>


        <input type="hidden" asp-for="DanhMucFoodId" />

        <button type="submit" class="btn btn-primary">Lưu</button>
        <a asp-controller="Admin_DanhMucFood" asp-action="DanhMucFoodAll" class="btn btn-secondary">Quay Lại</a>
    </form>
</body>
</html>
